# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                        controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file            controllers.Assets.at(path="/public", file)

# Rest API
GET           /data/years              controllers.Data.years()
GET           /data/classes            controllers.Data.classes()
GET           /data/classes/:id        controllers.Data.oneClass(id: Int)
POST          /data/classes            controllers.Data.addClass()
PUT           /data/classes/:id        controllers.Data.updateClass(id: Int)
DELETE        /data/classes/:id        controllers.Data.deleteClass(id: Int)


# Redirect other adresses to index to ember.js
GET           /*page                   controllers.Application.page(page)